@model RegisterViewModel
@{
    ViewData["Title"] = "Регистрация";
}

<h1>Регистрация</h1>

<form asp-action="Register" method="post">
    <div>
        <label asp-for="Login">Логин</label>
        <input asp-for="Login" />
        <span asp-validation-for="Login"></span>
    </div>
    <div>
        <label asp-for="Email">Email</label>
        <input asp-for="Email" type="email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Password">Пароль</label>
        <input asp-for="Password" type="password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="ConfirmPassword">Подтверждение пароля</label>
        <input asp-for="ConfirmPassword" type="password" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>
    <div>
        <label asp-for="FirstName">Имя</label>
        <input asp-for="FirstName" />
        <span asp-validation-for="FirstName"></span>
    </div>
    <div>
        <label asp-for="LastName">Фамилия</label>
        <input asp-for="LastName" />
        <span asp-validation-for="LastName"></span>
    </div>
    <div>
        <label asp-for="MiddleName">Отчество</label>
        <input asp-for="MiddleName" />
        <span asp-validation-for="MiddleName"></span>
    </div>
    <div>
        <label asp-for="Phone">Телефон</label>
        <input asp-for="Phone" />
        <span asp-validation-for="Phone"></span>
    </div>
    <button type="submit">Зарегистрироваться</button>
</form>

<a asp-action="Login">Вход</a>

