@model List<Ticket>
@{
    ViewData["Title"] = "Корзина";
    var total = Model.Sum(t => t.Price);
}

<h1>Корзина</h1>

@if (!Model.Any())
{
    <p>Корзина пуста</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Фильм</th>
                <th>Дата и время</th>
                <th>Зал</th>
                <th>Место</th>
                <th>Цена</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ticket in Model)
            {
                <tr>
                    <td>@ticket.Session.Movie.Title</td>
                    <td>@ticket.Session.DateTime.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@ticket.Session.Hall.Name</td>
                    <td>Ряд @ticket.Seat.Row, Место @ticket.Seat.SeatNumber</td>
                    <td>@ticket.Price руб.</td>
                    <td>
                        <form asp-action="RemoveFromCart" method="post">
                            <input type="hidden" name="ticketId" value="@ticket.Id" />
                            <button type="submit">Удалить</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4"><strong>Итого:</strong></td>
                <td><strong>@total руб.</strong></td>
                <td></td>
            </tr>
        </tfoot>
    </table>

    <form asp-controller="Purchases" asp-action="Create" method="post">
        <label>
            Способ оплаты:
            <select name="paymentMethod">
                <option value="card">Банковская карта</option>
                <option value="cash">Наличные</option>
            </select>
        </label>
        <button type="submit">Оплатить</button>
    </form>
}

