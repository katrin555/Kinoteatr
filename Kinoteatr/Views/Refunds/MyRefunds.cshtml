@model List<Refund>
@{
    ViewData["Title"] = "Мои возвраты";
}

<h1>Мои возвраты</h1>

@if (!Model.Any())
{
    <p>У вас нет запросов на возврат</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Фильм</th>
                <th>Дата сеанса</th>
                <th>Место</th>
                <th>Дата запроса</th>
                <th>Сумма</th>
                <th>Статус</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var refund in Model)
            {
                <tr>
                    <td>@refund.Ticket.Session.Movie.Title</td>
                    <td>@refund.Ticket.Session.DateTime.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>Ряд @refund.Ticket.Seat.Row, Место @refund.Ticket.Seat.SeatNumber</td>
                    <td>@refund.RequestDate.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@refund.Amount руб.</td>
                    <td>@refund.Status</td>
                </tr>
            }
        </tbody>
    </table>
}

