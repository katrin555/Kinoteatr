@model Purchase
@{
    ViewData["Title"] = "Покупка";
}

<h1>Покупка #@Model.Id</h1>
<p>Дата: @Model.DateTime.ToString("dd.MM.yyyy HH:mm")</p>
<p>Способ оплаты: @Model.PaymentMethod</p>
<p>Сумма: @Model.TotalAmount руб.</p>
<p>Статус: @Model.Status</p>

<h2>Билеты</h2>
<table>
    <thead>
        <tr>
            <th>Фильм</th>
            <th>Дата и время</th>
            <th>Зал</th>
            <th>Место</th>
            <th>Цена</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model.Tickets)
        {
            <tr>
                <td>@ticket.Session.Movie.Title</td>
                <td>@ticket.Session.DateTime.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@ticket.Session.Hall.Name</td>
                <td>Ряд @ticket.Seat.Row, Место @ticket.Seat.SeatNumber</td>
                <td>@ticket.Price руб.</td>
                <td>
                    @if (ticket.Status == "paid" && ticket.Session.DateTime > DateTime.Now)
                    {
                        <form asp-controller="Refunds" asp-action="Create" method="post" style="display:inline;">
                            <input type="hidden" name="ticketId" value="@ticket.Id" />
                            <button type="submit">Вернуть билет</button>
                        </form>
                    }
                    else
                    {
                        <span>@ticket.Status</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

