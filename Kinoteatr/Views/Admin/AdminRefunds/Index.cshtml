@model List<Refund>
@{
    ViewData["Title"] = "Управление возвратами";
}

<h1>Управление возвратами</h1>

<table>
    <thead>
        <tr>
            <th>Пользователь</th>
            <th>Фильм</th>
            <th>Дата сеанса</th>
            <th>Место</th>
            <th>Дата запроса</th>
            <th>Сумма</th>
            <th>Статус</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var refund in Model)
        {
            <tr>
                <td>@refund.User.UserName</td>
                <td>@refund.Ticket.Session.Movie.Title</td>
                <td>@refund.Ticket.Session.DateTime.ToString("dd.MM.yyyy HH:mm")</td>
                <td>Ряд @refund.Ticket.Seat.Row, Место @refund.Ticket.Seat.SeatNumber</td>
                <td>@refund.RequestDate.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@refund.Amount руб.</td>
                <td>@refund.Status</td>
                <td>
                    @if (refund.Status == "pending")
                    {
                        <form asp-action="Approve" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@refund.Id" />
                            <button type="submit">Одобрить</button>
                        </form>
                        <form asp-action="Reject" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@refund.Id" />
                            <button type="submit">Отклонить</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

