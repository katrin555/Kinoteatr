@model List<Movie>
@{
    ViewData["Title"] = "Управление фильмами";
}

<h1>Управление фильмами</h1>

<p><a asp-action="Create">Добавить фильм</a></p>

<table>
    <thead>
        <tr>
            <th>Название</th>
            <th>Жанр</th>
            <th>Длительность</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.Genre</td>
                <td>@movie.Duration мин</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@movie.Id">Редактировать</a> |
                    <a asp-action="Delete" asp-route-id="@movie.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

