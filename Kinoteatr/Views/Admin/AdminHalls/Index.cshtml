@model List<Hall>
@{
    ViewData["Title"] = "Управление залами";
}

<h1>Управление залами</h1>

<p><a asp-action="Create">Добавить зал</a></p>

<table>
    <thead>
        <tr>
            <th>Название</th>
            <th>Количество мест</th>
            <th>Поддержка 3D</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hall in Model)
        {
            <tr>
                <td>@hall.Name</td>
                <td>@hall.TotalSeats</td>
                <td>@(hall.Supports3D ? "Да" : "Нет")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@hall.Id">Редактировать</a> |
                    <a asp-action="Delete" asp-route-id="@hall.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

