@model List<User>
@{
    ViewData["Title"] = "Управление пользователями";
}

<h1>Управление пользователями</h1>

<table>
    <thead>
        <tr>
            <th>Логин</th>
            <th>Email</th>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Телефон</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Phone</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id">Редактировать</a> |
                    <a asp-action="Delete" asp-route-id="@user.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

