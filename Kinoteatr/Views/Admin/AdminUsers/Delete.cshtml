@model User
@{
    ViewData["Title"] = "Удалить пользователя";
}

<h1>Удалить пользователя</h1>

<p>Вы уверены, что хотите удалить пользователя "@Model.UserName"?</p>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit">Удалить</button>
</form>

<a asp-action="Index">Отмена</a>

