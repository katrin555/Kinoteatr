@model Session
@{
    ViewData["Title"] = "Редактировать сеанс";
}

<h1>Редактировать сеанс</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div>
        <label asp-for="MovieId">Фильм</label>
        <select asp-for="MovieId" asp-items="ViewBag.MovieId"></select>
        <span asp-validation-for="MovieId"></span>
    </div>
    <div>
        <label asp-for="HallId">Зал</label>
        <select asp-for="HallId" asp-items="ViewBag.HallId"></select>
        <span asp-validation-for="HallId"></span>
    </div>
    <div>
        <label asp-for="DateTime">Дата и время</label>
        <input asp-for="DateTime" type="datetime-local" />
        <span asp-validation-for="DateTime"></span>
    </div>
    <div>
        <label asp-for="Price">Цена</label>
        <input asp-for="Price" type="number" step="0.01" />
        <span asp-validation-for="Price"></span>
    </div>
    <div>
        <label asp-for="Status">Статус</label>
        <select asp-for="Status">
            <option value="active">Активен</option>
            <option value="cancelled">Отменен</option>
            <option value="completed">Завершен</option>
        </select>
        <span asp-validation-for="Status"></span>
    </div>
    <button type="submit">Сохранить</button>
</form>

<a asp-action="Index">Назад</a>

