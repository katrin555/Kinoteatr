@model List<Session>
@{
    ViewData["Title"] = "Управление ценами";
}

<h1>Управление ценами</h1>

<table>
    <thead>
        <tr>
            <th>Фильм</th>
            <th>Зал</th>
            <th>Дата и время</th>
            <th>Цена</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var session in Model)
        {
            <tr>
                <td>@session.Movie.Title</td>
                <td>@session.Hall.Name</td>
                <td>@session.DateTime.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@session.Price руб.</td>
                <td><a asp-action="Edit" asp-route-id="@session.Id">Изменить цену</a></td>
            </tr>
        }
    </tbody>
</table>

